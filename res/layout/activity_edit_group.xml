<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageGroupsActivity" >

   <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/single_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
        	android:layout_toLeftOf="@+id/group_edit_btn"
			android:gravity="left"
            android:padding="8dp"
            android:text="Group name here"
            android:textColor="#33b5e5"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/group_delete_btn"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="8dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/trash" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33b5e5"
        android:layout_marginBottom="10dp" />

    <ListView
        android:id="@+id/events_group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts" />

    <ListView
        android:id="@+id/choose_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
