<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/event_in_dashboard_new_notifications"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_in_dashboard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:paddingRight="18dp"
            android:text="Army meeting - esh"
            android:textSize="28px" />

        <TextView
            android:id="@+id/event_in_dashboard_date"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:paddingRight="18dp"
            android:text="(18/12, 23:45)"
            android:textSize="18px"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/event_in_dashboard_new_notifications"
        style="@style/ButtonBlueBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:text="52"
        android:textSize="28px"
        android:visibility="invisible" />

</RelativeLayout>